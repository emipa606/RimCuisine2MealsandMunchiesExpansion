  <RecipeDef ParentName="RC2_CookJoyMealBase">
    <defName>RC2_MakeFruitPreserves</defName>
    <label>make fruit preserves</label>
    <description>Uses sweets and fruit to preserve fruit.  Very tasty. Makes 5.</description>
    <jobString>Baking pastries.</jobString>
    <recipeUsers>
      <li>ElectricStove</li>
      <li>FueledStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>RC2_SweetsRaw</li>
            <li>RC2_SweetsProcessed</li>
          </categories>
        </filter>
        <count>.25</count>
      </li>
      <li>
